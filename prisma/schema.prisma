generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}


model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      Role     @default(EMPLOYEE)
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      Status   @default(TODO)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

enum Role {
  MANAGER
  EMPLOYEE
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
}